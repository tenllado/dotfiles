
#include /etc/kanshi/config.d/*

profile laptop {
	output eDP-1 enable mode 1920x1200 position 0,0
}

profile despacho {
	output "Samsung Electric Company S34C65xU HNTX803010" mode 3440x1440 position 0,0
	output eDP-1 enable mode 1920x1200 position 0,1440
	exec swaymsg workspace 1, move workspace to eDP-1
	exec for w in seq 2 $(swaymsg -t get_workspaces -p | grep -e "^Workspace [0-9]\+" | sed -rn 's/Workspace ([0-9]+).*/\1/p' | sort -n | tail -1) ; do swaymsg workspace $w, move workspace to DP-3 ; done; swaymsg workspace 1

}

profile aula {
	output eDP-1 enable mode 1920x1200@60.026Hz position 0,0
	output HDMI-A-1 mode 1920x1080@60Hz position 1920,0
	exec for w in seq 1 $(swaymsg -t get_workspaces -p | grep -e "^Workspace [0-9]\+" | sed -rn 's/Workspace ([0-9]+).*/\1/p' | sort -n | tail -1) ; do swaymsg workspace $w, move workspace to HDMI-A-1 ; done; swaymsg workspace 10, move workspace to eDP-1
}
